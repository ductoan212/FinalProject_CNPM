@model IEnumerable<FinalProject.Models.HKNH>

@{
    ViewBag.Title = "Test";
    Layout = "~/Areas/PDT/Views/Shared/LayoutPDT.cshtml";

}

<h2>Xem báo cáo nợ học phí</h2>

<div class="form-group">
    @*s<div class="control-label col-md-2">Chọn học kỳ</div>*@
    <div class="col-md-10">
        <select class="form-control w-50 namhoc">
            <option value="0" selected>-- Chọn học kỳ --</option>
            @foreach (var item in Model)
            {
                <option value="@item.MaHKNH">HK @item.HocKy (@item.Nam1 - @item.Nam2)</option>
            }
        </select>
        <br />
        @if (ViewBag.message != "")
        {
            <div class="alert alert-warning w-50">@ViewBag.message</div>
        }
        <a class="btn btn-success" id="eidt-href" href="@Url.Action("ListHK", "BAOCAO_SV_NOHP", new { })">Xem báo cáo</a>
    </div>

</div>





<script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
<script>
    $(document).ready(function () {
        $("select.namhoc").change(function () {
            var selected = $(this).children("option:selected").val();
            if (selected == "0") {
                alert("Chưa chọn năm học!!!");
                document.getElementById("eidt-href").href = "/BAOCAO_SV_NOHP/ListHK";
            }
            else {
                document.getElementById("eidt-href").href = "/PDT/BAOCAO_SV_NOHP/Index/" + selected.toString();
            }
        });
    });
</script>

@model FinalProject.Models.CT_NGANH

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/PDT/Views/Shared/LayoutPDT.cshtml";
}

<h2>Sửa học kỳ của năm học</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MaNganh)
    @Html.HiddenFor(model => model.MaMonHoc)

    <div class="form-group">
        <div class="control-label col-md-2">Học kỳ</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.HocKy, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.HocKy, "", new { @class = "text-danger" })
        </div>
    </div>
    @if (ViewBag.m == "Sai")
    {
        <div class="alert alert-danger">Không hợp lệ !! </div>
    }
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Lưu lại" class="btn btn-success" />
        </div>
    </div>
</div>
}

<hr />
<div>
    @Html.ActionLink("Quay lại", "Index")
</div>
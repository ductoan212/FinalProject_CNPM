@model IEnumerable<FinalProject.Models.DS_MONHOC_MO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/PDT/Views/Shared/LayoutPDT.cshtml";
}

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Danh sách môn học mở HK @ViewBag.TenHK.HocKy (@ViewBag.TenHK.Nam1-@ViewBag.TenHK.Nam2)</h1>


<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        @Html.ActionLink("Thêm mới", "List", new { @MaHKNH = ViewBag.TenHK.MaHKNH }, new { @class = "btn btn-primary" })
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                <div class="col-sm-12">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>
                                    Học kỳ
                                </th>
                                <th>
                                    Tên môn học
                                </th>
                                <th>
                                    Số tiết
                                </th>
                                <th style="width:50px">
                                    Thao tác
                                </th>
                            </tr>
                        </thead>

                        <tfoot>
                            <tr>
                                <th>
                                    Học kỳ
                                </th>
                                <th>
                                    Tên môn học
                                </th>
                                <th>
                                    Số tiết
                                </th>
                                <th style="width:50px">
                                    Thao tác
                                </th>
                            </tr>
                        </tfoot>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    HK @Html.DisplayFor(modelItem => item.HKNH.HocKy) (@Html.DisplayFor(modelItem => item.HKNH.Nam1) - @Html.DisplayFor(modelItem => item.HKNH.Nam2))
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MONHOC.TenMonHoc)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MONHOC.SoTiet)
                                </td>
                                <td>
                                    @*<div class="dropdown">
                                    <button type="button" class="btn btn-outline-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Thao tác
                                    </button>
                                    <div class="dropdown-menu">*@
                                    @* <a class="dropdown-item" href="@Url.Action("Details", "DS_MONHOC_MO", new { id = item.MaMo })">Chi tiết</a>*@
                                    @*<a class="dropdown-item" href="@Url.Action("Edit", "DS_MONHOC_MO", new { id = item.MaMo })">Sửa</a>*@
                                    <a class="btn btn-danger" href="@Url.Action("Delete", "DS_MONHOC_MO", new { id = item.MaMo })">Xóa</a>
                                    @*</div>
                                    </div>*@
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
        @Html.ActionLink("Quay lại", "ListHK", null, new { @class = "btn btn-link" })
    </div>
</div>

@model FinalProject.Models.HUYEN

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/PDT/Views/Shared/LayoutPDT.cshtml";
}

<h2>Thêm huyện</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="control-label col-md-2">Mã huyện</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.MaHuyen, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MaHuyen, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2">Tên huyện</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenHuyen, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenHuyen, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2">Thuộc tỉnh</div>
        <div class="col-md-10">
            @Html.DropDownList("MaTinh", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MaTinh, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2">Ưu tiên</div>
        <div class="col-md-10">
            @Html.RadioButtonFor(model => model.UuTien, true)
            Có
            <br />
            @Html.RadioButtonFor(model => model.UuTien, false)
            Không
            <br />
            @Html.ValidationMessageFor(model => model.UuTien, "", new { @class = "text-danger" })
        </div>
    </div>
    @if (ViewBag.m == "Sai")
    {
        <div class="alert alert-danger">Không hợp lệ !! </div>
    }
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Tạo" class="btn btn-success" />
        </div>
    </div>
</div>
}
<hr />
<div>
    @Html.ActionLink("Quay lại", "Index")
</div>

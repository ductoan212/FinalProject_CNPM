@model FinalProject.Models.HUYEN

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/PDT/Views/Shared/LayoutPDT.cshtml";
}

<h2>Sửa Huyện</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaHuyen)

        <div class="form-group">
            @*@Html.LabelFor(model => model.TenHuyen, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="control-label col-md-2">Tên huyện</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenHuyen, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenHuyen, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.MaTinh, "MaTinh", htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="control-label col-md-2">Tỉnh mà Huyện thuộc về</div>
            <div class="col-md-10">
                @Html.DropDownList("MaTinh", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaTinh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.UuTien, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="control-label col-md-2">Ưu tiên</div>
            <div class="col-md-10">
                @Html.RadioButtonFor(model => model.UuTien, true)
                Có
                <br />
                @Html.RadioButtonFor(model => model.UuTien, false)
                Không
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu lại" class="btn btn-success" />
            </div>
        </div>
    </div>
}
<hr />
<div>
    @Html.ActionLink("Quay lại", "Index")
</div>
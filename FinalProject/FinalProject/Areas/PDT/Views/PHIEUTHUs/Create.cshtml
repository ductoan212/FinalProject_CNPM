@model FinalProject.Models.PHIEUTHU

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/PDT/Views/Shared/LayoutPDT.cshtml";
}

<h2>Thêm mới phiếu thu</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="control-label col-md-2">Số phiếu thu</div>
        <div class="col-md-10">
            @*@Html.EditorFor(model => model.SoPhieuThu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SoPhieuThu, "", new { @class = "text-danger" })*@
            <div class="form-control">@ViewBag.id_phieu</div>
            @Html.HiddenFor(model => model.SoPhieuThu)
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2">Số phiếu đăng ký</div>
        <div class="col-md-10">
            @Html.DropDownList("SoPhieuDK", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.SoPhieuDK, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2">Ngày lập</div>
        <div class="col-md-10">
            @*@Html.EditorFor(model => model.NgayLap, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NgayLap, "", new { @class = "text-danger" })*@
            <div class="form-control">@ViewBag.NgayLap</div>
            @Html.HiddenFor(model => model.NgayLap)
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2">Số tiền thu</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.SoTienThu, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SoTienThu, "", new { @class = "text-danger" })
        </div>
    </div>
    @if (ViewBag.m == "Sai")
    {
        if (ViewBag.conlai == "0")
        {
            <div class="alert alert-danger">Không hợp lệ !! Phiếu này đã đóng đủ tiền @ViewBag.conlai</div>
        }
        else
        {
            <div class="alert alert-danger">Không hợp lệ !! Số tiền thu phải bé hơn @ViewBag.conlai đ </div>
        }

    }

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Thêm" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Quay lại", "Index")
</div>

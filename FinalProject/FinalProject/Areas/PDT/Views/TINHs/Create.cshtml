@model FinalProject.Models.TINH

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/PDT/Views/Shared/LayoutPDT.cshtml";
}

<h2>Tạo mới Tỉnh</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="control-label col-md-2">Mã tỉnh</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.MaTinh, new { htmlAttributes = new { @maxlength = "4", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MaTinh, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2">Tên tỉnh</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenTinh, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenTinh, "", new { @class = "text-danger" })
        </div>
    </div>
    @if (ViewBag.m == "Sai")
    {
        <div class="alert alert-danger">Không hợp lệ !! </div>
    }
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Tạo" class="btn btn-success" style="width: 100px" />
        </div>
    </div>
</div>
}
<hr />
<div>
    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-link" })
</div>
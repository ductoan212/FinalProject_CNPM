@model IEnumerable<FinalProject.Models.CT_NGANH>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/SinhVien/Views/Shared/LayoutSinhVien.cshtml";
}

@if (Model.Count() != 0)
{
    <h2>Khoa @Model.FirstOrDefault().NGANH.KHOA.TenKhoa</h2>
    <h2>Chương trình học ngành @Model.FirstOrDefault().NGANH.TenNganh</h2>
}
else
{
    <h2 class="alert">Ngành này chưa có chương trình học!</h2>
}

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                <div class="col-sm-12">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>
                                    Học kỳ
                                </th>
                                <th>
                                    Tên môn học
                                </th>
                            </tr>
                        </thead>

                        <tfoot>
                            <tr>
                                <th>
                                    Học kỳ
                                </th>
                                <th>
                                    Tên môn học
                                </th>
                            </tr>
                        </tfoot>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HocKy)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MONHOC.TenMonHoc)
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

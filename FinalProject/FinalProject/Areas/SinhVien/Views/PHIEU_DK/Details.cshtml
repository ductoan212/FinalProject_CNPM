@model FinalProject.Models.PHIEU_DK

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/SinhVien/Views/Shared/LayoutSinhVien.cshtml";
}

<h2>Chi tiết phiếu đăng ký</h2>

<table class="table table-borderless">
    <tr>
        <td>
            <span class="font-weight-bold">Số phiếu:</span>
            @Model.SoPhieuDK
        </td>

        <td>
            <span class="font-weight-bold">MSSV:</span>
            @Model.MaSinhVien
        </td>
    </tr>
    <tr>
        <td colspan="2">
            <span class="font-weight-bold">Ngày lập:</span>
            @Model.NgayDK
        </td>
    </tr>
    <tr>
        <td>
            <span class="font-weight-bold">Học kỳ:</span>
            HK @Model.HKNH.HocKy
        </td>

        <td>
            <span class="font-weight-bold">Năm học:</span>
            @Model.HKNH.Nam1-@Model.HKNH.Nam2
        </td>
    </tr>
</table>

<h3>Danh sách môn học đã đăng ký</h3>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        @Html.ActionLink("ĐK thêm", "Create", "CT_PHIEUDK", new { @id = Model.SoPhieuDK, @hknh = Model.MaHKNH, @id_sv = Model.MaSinhVien }, new { @class = "btn btn-success" })
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                <div class="col-sm-12">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>
                                    Mã môn học
                                </th>
                                <th>
                                    Tên môn học
                                </th>
                                <th>
                                    Số tín chỉ
                                </th>
                                <th></th>
                            </tr>
                        </thead>

                        <tfoot>
                            <tr>
                                <th>
                                    Mã môn học
                                </th>
                                <th>
                                    Tên môn học
                                </th>
                                <th>
                                    Số tín chỉ
                                </th>
                                <th></th>
                            </tr>
                        </tfoot>

                        @foreach (var item in ViewBag.CT_DK)
                        {
                            <tr>
                                <td>
                                    @item.DS_MONHOC_MO.MaMonHoc
                                </td>
                                <td>
                                    @item.DS_MONHOC_MO.MONHOC.TenMonHoc
                                </td>
                                <td>
                                    @item.DS_MONHOC_MO.MONHOC.SoTiet
                                </td>
                                <td>
                                    @Html.ActionLink("Xóa môn", "Delete", "CT_PHIEUDK", new { @id_pdk = item.SoPhieuDK, @id_mo = item.MaMo }, new { @class = "btn btn-danger" })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@Html.ActionLink("Quay lại", "IndexSV", "PHIEU_DK", new { id = ViewData["TenDangNhap"] }, new { })